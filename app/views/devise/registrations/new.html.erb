<% content_for :title do %>Sign Up<% end %>
<br><br>
<br><br>
<div class="col-md-4 mx-auto">
  <div class="card grey-gradient">
    <div class="card-block">
      <div class="form-header grey-gradient">
        <h3 class="text-header">
           Sign Up
         </h3>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="md-form">
          <i class="fa fa-user prefix white-text"></i>
          <%= f.text_field :first_name, :autofocus => true, placeholder: "John", class: 'form-control pink-text pink-input' %>
          <label for="first_name" class="grey-text">First Name</label>
        </div>
        <div class="md-form">
          <i class="fa fa-user prefix white-text"></i>
          <%= f.text_field :last_name, placeholder: "Doe", class: 'form-control pink-text pink-input' %>
          <label for="last_name" class="grey-text">Last Name</label>
        </div>
        <div class="md-form">
          <i class="fa fa-envelope prefix white-text"></i>
          <%= f.email_field :email, placeholder: "johndoe@gmail.com", class: 'form-control pink-text pink-input' %>
          <label for="email" class="grey-text">Email</label>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix white-text"></i>
          <%= f.password_field :password, placeholder: "Create A Secure Password", class: 'form-control pink-text pink-input' %>
          <label for="password" class="grey-text">Password</label>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix white-text"></i>
          <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: 'form-control pink-text pink-input' %>
          <label for="password_confirmation" class="grey-text">Confirm Password</label>
        </div>
        <div class="md-form">
          <%= f.button "Sign Up", class: "btn btn-block btn-lg btn-rounded btn-outline-white grey-gradient txt-btn", data: { disable_with: "<i class='fa fa-spinner fa-5x fa-spin'></i> Processing..."} %>
        </div>
      <% end %>
        <p class="white-text">Already have an account? <i class="fa fa-sign-in faa-horizontal animated grey-text" aria-hidden="true"></i>
 <a href="/users/sign_in" class="white-text">Sign In</a></p>
    </div>
  </div>
</div>
<br><br>

<%= link_to '', :back, class: "fa fa-hand-o-left fa-2x pink-text faa-horizontal animated" %>
