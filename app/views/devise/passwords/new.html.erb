<main>

  <div class="container">
    <div class="card grey-gradient">
      <div class="card-block">
        <div class="form-header grey-gradient">
          <h2 class="text-header">Forgot your password?</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="md-form">
            <i class="fa fa-envelope prefix white-text" aria-hidden="true"></i>
            <%= f.email_field :email, autofocus: true, placeholder: "Enter Your Email Address", class: "form-control pink-text pink-input" %>
            <label for="email" class="grey-text"> Email</label>
          </div>

          <div class="md-form">
            <%= f.button "Reset My Password", class: "btn btn-block btn-lg btn-rounded btn-outline-white grey-gradient txt-btn", data: { disable_with: "<i class='fa fa-spinner fa-5x fa-spin'></i> Processing..."} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
<%= link_to '', :back, class: "fa fa-hand-o-left fa-2x pink-text faa-horizontal animated" %>
