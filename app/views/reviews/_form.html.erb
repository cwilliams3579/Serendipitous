<div class="container" id="mainContainer">
  <div class="card grey-gradient">
    <div class="card-block">
      <div class="form-header grey-gradient">
        <h3 class="text-header">
          Review
        </h3>
      </div>
      <%= form_for([@product, @review]) do |f| %>
        <% if review.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

            <ul>
            <% review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="media-body">
          <i class="fa fa-star fa-2x prefix white-text" aria-hidden="true"></i>
            <ul class="inline-ul">
                <div id="star-rating" data-score= <%= review.rating %> ></div>
            </ul>
        </div>

        <div class="md-form">
          <i class="fa fa-pencil prefix white-text" aria-hidden="true"></i>
          <%= f.text_area :comment, class: "md-textarea white-text" %>
          <label for="comment">Comment</label>
        </div>


        <div class="md-form">
          <%= f.button class: "btn btn-block btn-lg btn-rounded btn-outline-white grey-gradient txt-btn",
              data: { disable_with: "<i class='fa fa-spinner fa-5x fa-spin'></i> Processing..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#star-rating').raty({
    path: 'https://s3.amazonaws.com/yelp-clone-rails/stars',
    scoreName: 'review[rating]'
  });
</script>
