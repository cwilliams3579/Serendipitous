<div class="container" id="mainContainer">
  <div class="card grey-gradient">
    <div class="card-block">
      <div class="form-header grey-gradient">
        <h3 class="text-header">
          Review
        </h3>
      </div>
      <%= form_for([@product, @review]) do |f| %>
        <% if review.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

            <ul>
            <% review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="md-form">
          <i class="fa fa-star prefix" aria-hidden="true"></i>
          <%= f.number_field :rating, id: :review_rating %>
          <label for="rating">Rating</label>
        </div>

        <div class="md-form">
          <i class="fa fa-pencil prefix" aria-hidden="true"></i>
          <%= f.text_area :comment, class: "md-textarea" %>
          <label for="comment">Comment</label>
        </div>


        <div class="md-form">
          <%= f.button class: "btn btn-block btn-lg btn-rounded btn-outline-white grey-gradient txt-btn",
              data: { disable_with: "<i class='fa fa-spinner fa-5x fa-spin'></i> Processing..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
